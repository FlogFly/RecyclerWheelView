<?xml version="1.0" encoding="utf-8"?>
<com.example.recyclewheelview.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="AA\nAA"
        android:textSize="16sp"
        app:layout_widthPercent="18%" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_widthPercent="32%">

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="8.8"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_widthPercent="25%">

        <TextView
            android:id="@+id/year_to_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.4%"
            android:maxLines="1"
            android:textColor="#FD5066"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计同比"
            android:textColor="#999999"
            android:textSize="9sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_widthPercent="25%">

        <TextView
            android:id="@+id/year_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.4%"
            android:maxLines="1"
            android:textColor="#44CEBF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年完成率"
            android:textColor="#999999"
            android:textSize="9sp" />


    </LinearLayout>


</com.example.recyclewheelview.widget.PercentLinearLayout>